#i3 config (qm0937)


#mod
set $mod Mod4

#font
font pango:DejaVu Sans Mono 8

floating_modifier $mod

#-----------------------------------

# start terminator
bindsym $mod+Return exec terminator

# start PopcornTime
bindsym $mod+Shift+p exec /opt/PopcornTime/Popcorn-Time

# start Eclipse
bindsym $mod+Shift+b exec /home/qm0937/prog/java/eclipse/eclipse

# start Google Chrome
bindsym $mod+Shift+g exec google-chrome

# start Firefox 
bindsym $mod+Shift+f exec firefox 

# start Nautilus
bindsym $mod+Shift+n exec nautilus 

# start WireShark
# bindsym $mod+Shift+n exec wireshark 

